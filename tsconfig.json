{
  "compilerOptions": {
    "lib": ["es2018", "DOM"],
    "target": "es2020",
    "module": "commonjs",
    "allowJs": true,
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    // "preserveConstEnums": true,
    // "noEmit": true,
    // "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "skipLibCheck": true,
    // "forceConsistentCasingInFileNames": true,
    "baseUrl": "./"
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/node_modules"],
  "include": ["./src/**/*.ts"]
}
